<div class="container">
  <div class="pull-left">
    <h4>Channels</h4>
  </div>
  <div class="pull-right">
    <%= link_to content_tag("span", "", class: "glyphicon glyphicon-plus") + " New Channel", new_channel_path, class: "btn btn-success" %>
  </div>
  <div class="clearfix"></div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @channels.each do |channel| %>
        <tr>
          <%= render channel %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
